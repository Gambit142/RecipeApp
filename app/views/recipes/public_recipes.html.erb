<div class="container">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe_url(recipe), class: 'public-recipe-container' do %>
      <div>
        <div>
          <h1><%= recipe.name%></h1>
          <div>
            <p>Total food items: <%= recipe.total_food_items %></p>
            <p>Total price: $<%= recipe.total_price %></p>
          </div>
        </div>
      </div>
      <h2>By: <%= recipe.user.name %></h2>
    <% end %>
  <% end %>
</div>