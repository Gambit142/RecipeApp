<main>
  <h1><%= @recipe.name %></h1>
  <section class="flex">
    <div class="flex-column">
      <p>Preparation time: <%= @recipe.preparation_time %> minutes </p>
      <p>Cooking time: <%= @recipe.cooking_time %> minutes </p>
      <p>Steps go here...</p>
      <%= link_to 'Generate shopping list', shopping_list_url %>
    </div>
    <div class="flex-column">
      <div>
        <label for="public">Public</label>
        <input name="public" type="checkbox">
      </div>
      <%= link_to 'Add ingredient', new_recipe_ingredient_url(@recipe) %>
    </div>
  </section>
  <div class="ingredients">
    <table>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
      <% @recipe.ingredients.each do |ingredient| %>
        <tr>
          <td><%= ingredient.food.name %></td>
          <td><%= "#{ingredient.quantity} #{ingredient.food.measurement_unit}" %></td>
          <td>$<%= ingredient.food.price %></td>
          <td>
            <%= link_to 'Modify', edit_ingredient_url(ingredient) %>
            <%= link_to 'Remove', ingredient_url(ingredient), method: :delete %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</main>