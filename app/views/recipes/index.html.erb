<h1>Recipes#index</h1>

<section>
  <div class="recipes">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_url(recipe), class: 'recipe' do %>
        <div>
          <h3><%= recipe.name %></h3>
          <%= button_to 'REMOVE', recipe_url(recipe), method: :delete %>
        </div>
        <p><%= recipe.description %></p>
      <% end %>
    <% end %>
  </div>
</section>
