<%= button_to 'Add Food', new_food_url %>

<table>
  <tr>
    <th>Food</th>
    <th>Measurement Unit</th>
    <th>Unit Price</th>
    <th>Actions</th>
  </tr>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %></td>
      <td><%= food.price %></td>
      <td><%= link_to 'Delete', food_url(food),
            method: :delete,
            data: {confirm: 'Are You Sure You Want to Delete This Food Item'}
            %>
      </td>
    </tr>
  <% end %>
</table>
